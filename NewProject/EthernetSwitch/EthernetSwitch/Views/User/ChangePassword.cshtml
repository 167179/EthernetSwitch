@model EthernetSwitch.ViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    @Model.Message
</div>
<form method="post" asp-action="ChangePassword">
    <div class="form-group">
        <label asp-for="@Model.OldPassword" class="col-form-label col-md-2">Old password</label>
        <div class="col-md-10">
            <input asp-for="@Model.OldPassword" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="@Model.NewPassword" class="col-form-label col-md-2">New password</label>
        <div class="col-md-10">
            <input asp-for="@Model.NewPassword" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="@Model.ConfirmPassword" class="col-form-label col-md-2">Confirm new password</label>
        <div class="col-md-10">
            <input asp-for="@Model.ConfirmPassword" />
        </div>
    </div>
    <div class="form-group">
        <button class="btn btn-outline-primary btn-sm">Update password</button>
    </div>
</form>

@model EthernetSwitch.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<div>
    @Model.Message
</div>
<form method="post" asp-action="Login">
    <div class="form-group">
        <label asp-for="@Model.UserName" class="col-form-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="@Model.UserName" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Password" class="col-form-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="@Model.Password" />
        </div>
    </div>
    <div class="form-group">
        <button class="btn btn-outline-primary btn-sm">Log in</button>
    </div>
</form>

